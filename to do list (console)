tasks = []

while True:
    print("\n1.Add Task  2.View Tasks  3.Exit")
    choice = int(input("Enter choice: "))

    if choice == 1:
        task = input("Enter task: ")
        tasks.append(task)

    elif choice == 2:
        print("\nYour Tasks:")
        for t in tasks:
            print("-", t)

    elif choice == 3:
        break
