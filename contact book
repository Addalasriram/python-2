contacts = {}

while True:
    print("\n1.Add 2.View 3.Exit")
    ch = int(input("Choice: "))

    if ch == 1:
        name = input("Name: ")
        phone = input("Phone: ")
        contacts[name] = phone

    elif ch == 2:
        for n, p in contacts.items():
            print(n, ":", p)

    else:
        break
